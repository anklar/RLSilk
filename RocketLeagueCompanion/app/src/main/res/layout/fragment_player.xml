<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PlayerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:keepScreenOn="false"
        android:orientation="vertical"
        android:paddingTop="25dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:id="@+id/profileDisplayLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/ic_arrow_back_white" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="TextView"
                android:textSize="24sp" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/duelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1v1Duel"
                    app:layout_column="0"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/duoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1v1duo"
                    app:layout_column="1"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/standardLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1v1standard"
                    app:layout_column="2"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/soloLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1v1solo"
                    app:layout_column="3"
                    app:layout_row="0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/duelMmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    app:layout_column="0"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/duoMmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    app:layout_column="1"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/standardMmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    app:layout_column="2"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/soloMmr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    app:layout_column="3"
                    app:layout_row="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/duelImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rank0"
                    app:layout_column="0"
                    app:layout_row="2" />

                <ImageView
                    android:id="@+id/duoImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rank0"
                    app:layout_column="1"
                    app:layout_row="2" />

                <ImageView
                    android:id="@+id/standardImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rank0"
                    app:layout_column="2"
                    app:layout_row="2" />

                <ImageView
                    android:id="@+id/soloImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rank0"
                    app:layout_column="3"
                    app:layout_row="2" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/shotImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/shots" />
            </TableRow>

        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shotTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="250" />

                <ImageView
                    android:id="@+id/goalImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/goals" />

                <TextView
                    android:id="@+id/goalTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="125" />
            </LinearLayout>

            <ImageView
                android:id="@+id/shotImg5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@drawable/shots" />

            <TextView
                android:id="@+id/shotTxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="250" />

            <ImageView
                android:id="@+id/goalImg5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@drawable/goals" />

            <TextView
                android:id="@+id/goalTxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="125" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/assistImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/assists" />

                <TextView
                    android:id="@+id/assistTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="250" />

                <ImageView
                    android:id="@+id/saveImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/saves" />

                <TextView
                    android:id="@+id/saveTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="125" />
            </LinearLayout>

            <ImageView
                android:id="@+id/assistImg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@drawable/assists" />

            <TextView
                android:id="@+id/assistTxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="250" />

            <ImageView
                android:id="@+id/saveImg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@drawable/saves" />

            <TextView
                android:id="@+id/saveTxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="125" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/winImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/wins" />

                <TextView
                    android:id="@+id/winTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="250" />

                <ImageView
                    android:id="@+id/mvpImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:src="@drawable/mvps" />

                <TextView
                    android:id="@+id/mvpTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="125" />
            </LinearLayout>

            <ImageView
                android:id="@+id/winImg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@drawable/wins" />

            <TextView
                android:id="@+id/winTxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="250" />

            <ImageView
                android:id="@+id/mvpImg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:src="@drawable/mvps" />

            <TextView
                android:id="@+id/mvpTxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="125" />
        </TableRow>

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

</FrameLayout>